{
  "name": "Morgan-and-Morgan/forthepeople",
  "description": "wordpress setup for forthepeople.com",
  "license": "proprietary",
  "config": {
    "vendor-dir": "web/app/mu-plugins"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
        "type": "composer",
        "url": "https://satis.forthepeople.com"
    }
  ],
  "require": {
    "johnpbloch/wordpress": "4.*",
    "mnsami/composer-custom-directory-installer": "1.0.*",
    "wpackagist-plugin/hubspot-tracking-code": "~1.0",
    "wpackagist-plugin/wp-smushit": "^2.3",
    "morgan-and-morgan/facebook-buttons": "1.0.*",
    "wpackagist-plugin/debug-bar": "^0.8.4"

  },
  "require-dev": {
    "vlucas/phpdotenv": "~2.0"
  },
  "extra": {
    "webroot-dir": "wp",
    "wordpress-install-dir": "./web/wp",

    "installer-paths": {
      "./phpdotenv/": ["vlucas/phpdotenv"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
